{
    "version": 6,
    "cmakeMinimumRequired": {
	"major": 3,
	"minor": 20,
	"patch": 0
    },
    "configurePresets": [
	{
	    "name": "default-debug",
	    "hidden": true,
	    "displayName": "Default Debug configuration preset",
	    "generator": "Ninja",
	    "binaryDir": "${sourceDir}/build_cmake/debug",
	    "cacheVariables": {
		"CMAKE_BUILD_TYPE": "Debug"
	    }
	},
	{
	    "name": "default-release",
	    "hidden": true,
	    "displayName": "Default Release configuration preset",
	    "generator": "Ninja",
	    "binaryDir": "${sourceDir}/build_cmake/release",
	    "cacheVariables": {
		"CMAKE_BUILD_TYPE": "Release"
	    }
	},
	{
	    "name": "linux-debug",
	    "inherits": ["default-debug"],
	    "displayName": "Default Debug configuration preset",
	    "installDir": "/usr/",
	    "cacheVariables": {
		"CMAKE_CXX_COMPILER": "clang++"
	    },
	    "condition": {
		"type": "notEquals",
		"lhs": "${hostSystemName}",
		"rhs": "Windows"
	    }
	},
	{
	    "name": "linux-release",
	    "inherits": ["default-release"],
	    "displayName": "Default Debug configuration preset",
	    "installDir": "/usr/",
	    "cacheVariables": {
		"CMAKE_CXX_COMPILER": "clang++"
	    },
	    "condition": {
		"type": "notEquals",
		"lhs": "${hostSystemName}",
		"rhs": "Windows"
	    }
	},
	{
	    "name": "windows-debug",
	    "inherits": ["default-debug"],
	    "displayName": "Windows Debug configuration preset",
	    "cacheVariables": {
		"CMAKE_BUILD_TYPE": "Debug",
		"CMAKE_CXX_COMPILER": "clang-cl"
	    },
	    "condition": {
		"type": "equals",
		"lhs": "${hostSystemName}",
		"rhs": "Windows"
	    }
	},
	{
	    "name": "windows-release",
	    "inherits": ["default-release"],
	    "displayName": "Windows Release configuration preset",
	    "cacheVariables": {
		"CMAKE_BUILD_TYPE": "Release",
		"CMAKE_CXX_COMPILER": "clang-cl"
	    },
	    "condition": {
		"type": "equals",
		"lhs": "${hostSystemName}",
		"rhs": "Windows"
	    }
	}
    ],
    "buildPresets": [
	{
	    "name": "linux-build-debug",
	    "displayName": "Linux Debug build preset",
	    "verbose": true,
	    "configurePreset": "linux-debug"
	},
	{
	    "name": "linux-build-release",
	    "displayName": "Linux Release build preset",
	    "configurePreset": "linux-release"
	},
	{
	    "name": "windows-build-debug",
	    "displayName": "Windows Debug build preset",
	    "configurePreset": "windows-debug"
	},
	{
	    "name": "windows-build-release",
	    "displayName": "Windows Release build preset",
	    "configurePreset": "windows-release"
	}
    ],
    "testPresets": [
	{
	    "name": "linux-test-debug",
	    "configurePreset": "linux-debug",
	    "output": {
		"outputOnFailure": true
	    },
	    "execution": {
		"noTestsAction": "error",
		"stopOnFailure": true
	    }
	},
	{
	    "name": "windows-test-debug",
	    "configurePreset": "windows-debug",
	    "output": {
		"outputOnFailure": true
	    },
	    "execution": {
		"noTestsAction": "error",
		"stopOnFailure": true
	    }
	}
    ],
    "packagePresets": [
	{
	    "name": "linux-pkg-release",
	    "configurePreset": "linux-release",
	    "generators": [
		"TGZ",
		"RPM"
	    ]
	},
	{
	    "name": "windows-pkg-release",
	    "configurePreset": "windows-release",
	    "generators": [
		"TGZ"
	    ]
	}
    ],
    "workflowPresets": [
	{
	    "name": "linux-debug-workflow",
	    "steps": [
		{
		    "type": "configure",
		    "name": "linux-debug"
		},
		{
		    "type": "build",
		    "name": "linux-build-debug"
		},
		{
		    "type": "test",
		    "name": "linux-test-debug"
		}
	    ]
	},
	{
	    "name": "linux-release-workflow",
	    "steps": [
		{
		    "type": "configure",
		    "name": "linux-release"
		},
		{
		    "type": "build",
		    "name": "linux-build-release"
		},
		{
		    "type": "package",
		    "name": "linux-pkg-release"
		}
	    ]
	},
	{
	    "name": "windows-debug-workflow",
	    "steps": [
		{
		    "type": "configure",
		    "name": "windows-debug"
		},
		{
		    "type": "build",
		    "name": "windows-build-debug"
		},
		{
		    "type": "test",
		    "name": "windows-test-debug"
		}
	    ]
	},
	{
	    "name": "windows-release-workflow",
	    "steps": [
		{
		    "type": "configure",
		    "name": "windows-release"
		},
		{
		    "type": "build",
		    "name": "windows-build-release"
		},
		{
		    "type": "package",
		    "name": "windows-pkg-release"
		}
	    ]
	}
    ]
}
